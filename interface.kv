<MyLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    TextInput:
        id: input1
        hint_text: "Enter first number"
        multiline: False

    TextInput:
        id: input2
        hint_text: "Enter second number"
        multiline: False

    Button:
        text: "Calculate"
        size_hint_y: None
        height: 50
        on_press: root.calculate()

    Label:
        id: result
        text: ""
        font_size: 18
        halign: "center"
